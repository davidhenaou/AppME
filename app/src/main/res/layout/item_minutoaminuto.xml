<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:id="@+id/padreminuto">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:id="@+id/linearRecuadro"
        android:baselineAligned="false"
        android:gravity="center"
        android:layout_alignWithParentIfMissing="false"
        android:layout_alignParentRight="false"
        android:layout_alignParentBottom="false"
        android:layout_alignParentLeft="false"
        android:layout_alignParentTop="false">

        <TextView
            android:text="Min"
            android:id="@+id/txtminutoi"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/imgIzquierda"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_toLeftOf="@+id/txtminutoi"
            android:src="@drawable/ic_menu_gallery"
            android:layout_gravity="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:text="Medium Text"
            android:id="@+id/mintituloizquierdo"
            android:textSize="12dp"
            android:maxLines="2"
            android:lines="2"
            android:layout_marginLeft="5dp"
            android:textAlignment="viewStart"
            android:maxWidth="250dp"
            android:layout_weight="2"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:text="Medium Text"
            android:id="@+id/mintitulocentral"
            android:textSize="15dp"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:maxWidth="250dp"
            android:layout_weight="2"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:text="Medium Text"
            android:id="@+id/mintituloderecho"
            android:textSize="12dp"
            android:maxLines="2"
            android:lines="2"
            android:layout_marginRight="5dp"
            android:textAlignment="viewEnd"
            android:maxWidth="250dp"
            android:layout_weight="2"/>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/imgDerecha"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_toLeftOf="@+id/txtminutoi"
            android:src="@drawable/ic_menu_gallery"
            android:layout_gravity="center" />

        <TextView
            android:text="Min"
            android:id="@+id/txtminutod"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            />
    </LinearLayout>

</RelativeLayout>

